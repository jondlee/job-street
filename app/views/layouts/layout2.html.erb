<!DOCTYPE html>
<html>
<head>
  <title>JobStreet - Your Path to a Better Job</title>
  <%= stylesheet_link_tag    "application2", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

	<div class="header">
		<div class="container">
			<div class="logo">
				<%= link_to image_tag("logo-jobstreet.png"), root_url %> 
			</div>
			
			<div style="clear:both;"></div>
			
			<div class="search">		
				<form action="/" accept-charset="UTF-8" method="post">
					<div class="search_field">
						<%= label_tag :keywords, "Keywords" %> <span class="hint">job title or company</span><br />
						<%= text_field_tag :keywords, params[:keywords], :placeholder => "Job or Company Name" %><br />

						<%= label_tag :days_back, "Days Back", :style => "margin: 20px 10px 0 0;" %>
						<%= select_tag :days_back, options_for_select([['60 Days', '60'], ['3 Days', '3'], ['7 Days', '7'], ['14 Days', '14'], ['30 Days', '30']]), :style => "margin-top: 20px;" %>	
						
					</div>
					<div class="search_field">
						<%= label_tag :location, "Location" %> <span class="hint">city or state</span><br />
						<%= text_field_tag :location, params[:location], :placeholder => "Job Location" %><br />
						<label style="margin-top: 20px;">Popular Searches: </label>
						<div style="clear:both;"></div>
						<div class="quick_search">
							<%= link_to "Medical", root_url(params.merge({:keywords => "Medical"})) %>
							<%= link_to "Healthcare", root_url(params.merge({:keywords => "Healthcare"})) %>
							<%= link_to "Driver", root_url(params.merge({:keywords => "Driver"})) %>
							<%= link_to "Sales", root_url(params.merge({:keywords => "Sales"})) %><br />
							<%= link_to "Administrative", root_url(params.merge({:keywords => "Administrative"})) %>
							<%= link_to "Financial", root_url(params.merge({:keywords => "Financial"})) %>
						</div>
						
					</div>
					<div class="search_field_last">						
				  		<%= image_submit_tag "search_button.png", :class => "submit" %>				
					</div>
				</form>
				<div style="clear:both;"></div>
			</div>
			
			
		</div>
	</div>
	
